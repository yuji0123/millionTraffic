<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Itemid</th>
      <th>Itemsupplier</th>
      <th>Itemstockquantity</th>
      <th>Itembaseprice</th>
      <th>Itemtags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.itemId %></td>
        <td><%= item.itemSupplier %></td>
        <td><%= item.itemStockQuantity %></td>
        <td><%= item.itemBasePrice %></td>
        <td><%= item.itemTags %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

